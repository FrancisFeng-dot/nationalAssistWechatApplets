/* pages/makebattle/battlerank.wxss */
page {
  width: 100%;
  height: auto;
  overflow-y: auto;
  margin: 0;
  padding: 0;
  background:#ffffff;
}

.container {
  width: 100%;
  height: 100%;
  box-sizing: border-box;
  margin: 0;
  padding: 0;
  position:relative;
}

.menutitle{
  width:100%;height:80rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.menutitle>image{
  width:44rpx;
  height:16rpx;
}

.menutitle>text{
  font-family: MicrosoftYaHei;
  font-size:28rpx;
  color:#333333;
  margin: 0 14rpx;
}

.active {
  color: rgba(254, 65, 65, 1);
  border-bottom: 6rpx solid rgba(254, 65, 65, 1);
  margin-bottom:-6rpx;
}
.list {
  width: 100%;
  padding: 0;
  background: #ffffff;
}

.list_title {
  width: 100%;
  height: 68rpx;
  border-bottom:1rpx solid rgba(229, 229, 229, 1);
  margin: 0;
  display: flex;
  justify-content: space-around;
  align-items: center;
  font-size: 26rpx;
  font-family: MicrosoftYaHei;
  color: rgba(102, 102, 102, 1);
  box-sizing:border-box;
  background: #ffffff;
}

.list_title view {
  width: 130rpx;
  height: 56rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.skin {
  width: 100%;margin-top:2rpx;overflow-y:scroll;
  background: #ffffff;
}

.box {
  width: 100%;
  height: 104rpx;
  position: relative;
  display: flex;
  justify-content: flex-end;
  align-items: center;
}

.skin_person {
  width: 86%;
  height: 112rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  padding-right:90rpx;padding-bottom:10rpx;
  margin-left:40rpx;
  position: relative;
}

.thinline{
  width:100%;
  height:1px;
  background: #EBEBEB;
  transform: scale(1,0.5);
  position:absolute;
  bottom:0;
}

.width38_height52{
  width:38rpx;height:52rpx;
}

.size34_999{
  text-align:center;font-size:34rpx;color:#999999;line-height:52rpx;
}

.person_title {
  display: flex;
  justify-content: flex-start;
  align-items: center;
  width:380rpx;
}

.person_title>image {
  width: 70rpx;
  height: 70rpx;
  border-radius: 50%;
  margin-right:34rpx;
}

.person_title>text {
  font-size: 26rpx;
  font-family: MicrosoftYaHei;
  color: #666666;
}

.person_time {
  font-size: 26rpx;
  font-family: MicrosoftYaHei;
  color: #666666;
  white-space: nowrap;
}

.callhesign{
  width: 154rpx;
  height: 54rpx;
  line-height: 54rpx;
  background: #FF9413;
  border:0;
  border-radius: 28rpx;
  font-size: 26rpx;
  font-family: MicrosoftYaHei;
  color: #FFFFFF;
  padding: 0;
}

.callhesign::after{
  border:0;
}

.mask{
  margin: auto;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items:center;
  height:700rpx;
}

.mask>text{
  font-family: MicrosoftYaHei;
  font-size:26rpx;
  color:#666666;
  margin-top:-200rpx;
}

.mask>button{
  width:300rpx;
  height:90rpx;
  border-radius: 46rpx;
  background: #ffffff;
  padding: 0;
  box-sizing: border-box;
  border:2rpx solid #FE4141;
  display: flex;
  justify-content:center;
align-items:center;
margin-top:84rpx;
}

.mask>button>image{
  width:40rpx;
  height:32rpx;
}

.mask>button>text{
  font-family: MicrosoftYaHei;
  font-size:28rpx;
  color:#FE4141;margin-left:14rpx;
}