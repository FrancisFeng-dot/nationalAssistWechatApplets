/* pages/prize/prize.wxss */

page {
  width: 100%;
  height: 100%;
  overflow-y: auto;
  /*滚动条要隐藏么  */
  margin: 0;
  padding: 0;
}

.container {
  width: 100%;
  height: 100%;
  box-sizing: border-box;
  /*background-image: url('https://qmzg.boc7.net/uploads/background/20180716/ad5bad23c1f5050cf3346acb055c70c1.png');*/
  background-size: 100% 100%;
  display:flex;
flex-direction:column;
justify-content:space-around;
align-items:center;
padding-top:218rpx;
}

.num {
  width: 300rpx;
  height: 60rpx;
  font-size: 28rpx;
  font-family: MicrosoftYaHei;
  color: rgba(255, 246, 193, 1);
  text-align: center;
  line-height: 60rpx;
  /*background-image: url('https://qmzg.boc7.net/uploads/background/20180716/8e105fa4636e6fa6a302bd5938c79795.png');*/
  background-size: 100%;
}

.block {
  width: 676rpx;
  height: 550rpx;
  /*background-image: url('https://qmzg.boc7.net/uploads/background/20180716/2916517bce368812d9e443091b913213.png');*/
  background-size: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}

.father {
  width: 580rpx;
  height: 460rpx;
  /* border: 1rpx solid black; */
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: space-between;
}

.box {
  width: 180rpx;
  height: 140rpx;
}

.box image {
  width: 180rpx;
  height: 140rpx;
  /* border: 1rpx solid black; */
}

.sharefriend {
  width: 670rpx;
  height: 82rpx;
  background: rgba(254, 65, 65, 1);
  border-radius: 44px;
  background-image: url('https://qmzg.boc7.net/uploads/background/20180716/b009fd54c6b7b70882d8fd57c508b377.png');
  background-size: 100%;
  font-size: 32rpx;
  font-family: MicrosoftYaHei;
  color: rgba(254, 252, 205, 1);
}

/*遮罩层  */

.mask {
  position: fixed;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.75);
  top: 0rpx;
  display: flex;
  flex-direction: column;
  z-index: 9999;
}

.bags {
  width: 670rpx;
  height: 640rpx;
  z-index: 10000;
  margin: 240rpx auto;
  background: rgba(255, 255, 255, 1);
  border-radius: 24rpx;
  position: relative;
  display:flex;
flex-direction:column;
justify-content:center;
align-items:center;
}

.nowon{
  height:100%;
  display:flex;flex-direction:column;justify-content:space-around;align-items:center;
  margin:0 auto;padding:104rpx 0;box-sizing:border-box;
}

.nowon>image{
width:128rpx;height:128rpx;
}

.nowon>text{
color:#333333;font-size:28rpx;
}

.nowon>button{
  background:#FE7641;width:270rpx;height:68rpx;border-radius:34rpx;
  color:#ffffff;
  font-family: MicrosoftYaHei;
  font-size:26rpx;
}

.receiveredem{
  background:#FE7641;height:68rpx;border-radius:34rpx;line-height:68rpx;font-size: 26rpx;font-family: MicrosoftYaHei;color: rgba(254, 252, 205, 1);padding:0 30rpx;
}

.size22_color666{
  color:#666666;font-size:24rpx;
}

.winimage{
  position: relative;width: 100%;height: 230rpx;
}

.winimage>image{
  width:122rpx;height:122rpx;position:absolute;top:0;left:0;right:0;margin:auto;bottom:0;
}

.won{
width:100%;height:410rpx;display:flex;flex-direction:column;justify-content:space-around;align-items:center;position:relative;
}
