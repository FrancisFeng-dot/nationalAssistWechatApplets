/**exchangemall.wxss**/

page {
  width: 100%;
  height: auto;
  overflow-y: auto;
  margin: 0;
  padding: 0;
}

.container {
  width: 100%;
  height: 100%;
  box-sizing: border-box;
  margin: 0;
  padding: 0;
  background: #f5f5f5;position:relative;
}

.raiders{
  width:710rpx;margin:0 auto;height:178rpx;margin-bottom:20rpx;
}

.raiders navigator{
  width:100%;height:100%;border-radius:16rpx;
  background-size:100% 100%;
}

.redemptionmall{
  display:flex;
  flex-wrap:wrap;
  justify-content:flex-start;
  align-items:center;
  width:732rpx;
  margin:0 auto;
  margin-bottom:40rpx;
}

.redemptionmall>view{
  font-family:MicrosoftYaHei;
  display:flex;
  flex-direction:column;
  justify-content:flex-end;
  align-items:center;
  width:346rpx;height:540rpx;
  background:#ffffff;
  margin:0 10rpx;
  margin-bottom:20rpx;
}

.redemptionmall>view>image{
  width:306rpx;height:306rpx;
}

.redemptionmall>view>text{
  font-size:24rpx;
  color:#333333;
  margin-top:26rpx;
  width:306rpx;
}

.redemptionmall>view>view:nth-child(3){
margin-bottom:32rpx;
text-align:left;
width:306rpx;
}

.redemptionmall>view>view:nth-child(4){
width:304rpx;
height:80rpx;
border-top:0.5pt solid #E6E6E6;
display:flex;
justify-content:center;
align-items:center;
}

.mask {
  position: fixed;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.75);
  display: flex;
  flex-direction: column;
  z-index: 999;
}

.bags {
  width: 650rpx;
  height: 520rpx;
  z-index: 1000;
  background:#ffffff;
  border-radius: 16rpx;
  position: fixed;
  top:0;
  bottom:0;
  left: 0;right:0;
  margin: auto;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: center;
  box-sizing:border-box;
  padding:64rpx 0;
}
.bags>text{
  color:#333333;
  font-size:26rpx;
  width:564rpx;
  text-align:center;
}
.bags>button,.confirm_exchangemoney{
  color:#ffffff;
  font-size:26rpx;
  width: 300rpx;
  height:68rpx;
  border-radius: 34rpx;
  background: #FE4141;
}
.closepos{
  position:absolute;
  width:30rpx;height:30rpx;
  top:0;
  right:0;
  padding:40rpx 40rpx 200rpx 200rpx;
}
.size26_color666{
  font-size:26rpx;
  color:#666666;
}

.size26_color333{
  font-size:26rpx;
  color:#333333;
}

.size28_color333{
  font-size:28rpx;
  color:#333333;
}

.contact_confirm{
  color:#ffffff;
  font-size:26rpx;
  width: 300rpx;
  height:68rpx;
  border-radius: 34rpx;
  background: #FE4141;
}

.flex_input{
  display:flex;
  justify-content:flex-end;
  align-items:center;
  margin-top:20rpx;
}

.flex_input>input{
  width:436rpx;
  height:60rpx;
  border-radius:8rpx;
  border:2rpx solid #E6E6E6;
}

.signanimation{
  animation: mymove1 1.5s linear infinite;
  -o-animation: mymove1 1.5s linear infinite;
  -moz-animation: mymove1 1.5s linear infinite;
  -webkit-animation: mymove1 1.5s linear infinite;
}

@keyframes mymove1 {
  0% {transform:translate(0,4px);}
  50% {transform:translate(0,-4px);}
  100% {transform:translate(0,4px);}
}
@-webkit-keyframes mymove1 {
  0% {transform:translate(0,4px);}
  50% {transform:translate(0,-4px);}
  100% {transform:translate(0,4px);}
}

.jumpmakebattle{
  position:fixed;
  top:48%;right:22rpx;
  width:96rpx;height:116rpx;
  background-image:url('https://qmzgcdn.boc7.net/test/float_makebattle.png');
  background-size:100% 100%;
}