/* pages/freelottery/freelottery.wxss */
page {
  width: 100%;
  height: auto;
  overflow-y: auto;
  /*滚动条要隐藏么  */
  margin: 0;
  padding: 0;
  background: #F5F5F5;
}

.container {
  width: 100%;
  height: 100%;
  box-sizing: border-box;
  margin: 0;
  padding: 0;
  position:relative;
  padding-top:10rpx;
}

.lotterylist{
  width:690rpx;
  height:310rpx;
  margin: 0 auto;
  margin-top: 20rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 16rpx;
  background: #ffffff;
}

.lotterylist>image{
  width:290rpx;
  height: 232rpx;
}

.lotterylist>view{
  margin-left: 30rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: flex-start;
  height:240rpx;
}

.lotterylist>view>text{
  font-family: MicrosoftYaHei;
  font-size: 26rpx;
  color:#333333;
  width:320rpx;
}

.lotterylist>view>view{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: flex-start;
}

.lotterylist>view>view>text{
  font-family: MicrosoftYaHei;
  font-size: 22rpx;
  color:#666666;
}

.lotterylist>view>view>button{
  width: 160rpx;
  height:54rpx;
  border-radius: 28rpx;
  line-height: 52rpx;
  border:1px solid #FE5454;
  font-size: 26rpx;
  color:#FFFFFF;
  background: #FE4141;
  padding: 0;
  margin: 0;
  margin-top: 30rpx;
}
.lotterylist>view>view>button::after{
  border:0;
}

.alreadydrawn{
  width:690rpx;
  height:90rpx;
  margin: 0 auto;
  display: flex;
  justify-content: space-between;
  align-items: center;
  position: relative;
  box-sizing: border-box;
  padding: 0 30rpx 0 40rpx;
  background: #ffffff;
}

.alreadydrawn>text{
  font-family: MicrosoftYaHei;
  font-size: 28rpx;
  color:#333333;
}

.alreadydrawn>view:nth-child(2){
  display: flex;
  justify-content: center;
  align-items: center;
  font-family: MicrosoftYaHei;
  font-size:22rpx;
  color:#999999;
}
.alreadydrawn>view:nth-child(2)>image{
  width: 12rpx;
  height:22rpx;
  margin-left: 18rpx;
}

.thinline{
  width:100%;
  height:1px;
  background: #EBEBEB;
  transform: scale(1,0.5);
  position:absolute;
  bottom:0;left:0;
}