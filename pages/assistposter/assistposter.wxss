/* pages/assistposter/assistposter.wxss */
page {
  width: 100%;
  height: 100%;
  overflow-y: auto;
  margin: 0;
  padding: 0;
}

.container {
  width: 100%;
  height: 100%;
  box-sizing: border-box;
  margin: 0;
  position: relative;
}

.referrerto{
  display:flex;
  justify-content:flex-start;
  align-items:center;
  padding-left:60rpx;
}

.referrerto>view:nth-child(1){
  width:96rpx;
  height: 96rpx;
  background: #D3AC5D;
  border-radius: 50%;
  text-align: center;
  margin-right: 20rpx;
}

.referrerto>view:nth-child(1)>image{
  width:92rpx;
  height: 92rpx;
  border-radius: 50%;
  margin-top:2rpx;
}

.referrerto>view:nth-child(2){
  font-family: Microsoft YaHei;
  font-size: 28rpx;
  color:#ffffff;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: flex-start;
}

.referrerto>view:nth-child(2)>text:nth-child(1){
  color:#FABE1A;
}

.hasassist{
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 60rpx;
}

.hasassist>view:nth-child(1){
  background-size:100% 100%;
  width: 340rpx;
  height: 160rpx;
  border-radius: 10rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: flex-start;
  padding-left:34rpx;
  margin-left: 54rpx;
}

.hasassist>view:nth-child(1)>view{
  font-family: Microsoft YaHei;
  font-size: 28rpx;
  color:#ffffff;
}

.hasassist>view:nth-child(2){
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  margin-right:54rpx;
}

.hasassist>view:nth-child(2)>image{
  width: 170rpx;
  height: 170rpx;
}

.hasassist>view:nth-child(2)>text{
  font-family: Microsoft YaHei;
  font-size: 22rpx;
  color:#ffffff;
  margin-top: 16rpx;
}