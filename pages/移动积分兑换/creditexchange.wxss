/* pages/extractq/extractq.wxss */
page {
  width: 100%;
  height: auto;
  overflow-y: auto;
  margin: 0;
  padding: 0;
}

.container {
  width: 100%;
  height: 100%;
  box-sizing: border-box;
  margin: 0;
  padding:0 40rpx;
  position:relative;
}

.balanceshow{
  width: 670rpx;
  height: 260rpx;
  margin: 26rpx auto 68rpx;
  background-image: url('https://qmzgcdn.boc7.net/test/balance.png');
  background-size:100% 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  box-sizing: border-box;
}

.balanceshow>text:nth-child(1){
  font-family: MicrosoftYaHei;
  font-size: 24rpx;
  color:#ffffff;
}

.balanceshow>text:nth-child(2){
  font-family: MicrosoftYaHei;
  font-size: 66rpx;
  color:#ffffff;
}

.balanceshow>button,.balanceshow>navigator{
  width: 190rpx;
  height:50rpx;
  line-height:48rpx;
  border:1px solid #ffffff;
  border-radius:26rpx;
  background: transparent;
  font-family: MicrosoftYaHei;
  font-size: 22rpx;
  color:#ffffff;
  text-align: center;
  margin-top: 20rpx;
}

.balanceshow>button::after{
  border:0;
}

.mobilegoods_detail{
  width:670rpx;
  height:420rpx;
  background:#FFFCE7;
  margin:0 auto;
  border-radius:16rpx;
  box-shadow:2rpx 2rpx 10rpx #EFE8B6;
  display: flex;
  flex-direction:column;
  justify-content: center;
  align-items: center;
}

.mobilegoods_detail>view{
  display: flex;
  justify-content: center;
  align-items: center;
}

.mobilegoods_detail>view>view:nth-child(1){
  width: 220rpx;
  height: 220rpx;
  background: #FFEC6F;
  display: flex;
  justify-content: center;
  align-items: center;
}

.mobilegoods_detail>view>view:nth-child(1)>image{
  width: 150rpx;
  height: 150rpx;
}

.mobilegoods_detail>view>view:nth-child(2){
  display:flex;
  flex-direction:column;
  justify-content:space-around;
  align-items:flex-start;
  height: 150rpx;
  margin-left: 46rpx;
}

.mobilegoods_detail>view>view:nth-child(2)>text:nth-child(1){
  color:#333333;
  font-size:32rpx;
}

.mobilegoods_detail>view>view:nth-child(2)>text:nth-child(2){
  color:#999999;
  font-size:24rpx;
}

.mobilegoods_detail>view>view:nth-child(2)>text:nth-child(3){
  color:#FE4141;
  font-size:28rpx;
}

.mobilegoods_detail button{
  width: 550rpx;
  height:86rpx;
  background: #FE4141;
  line-height: 86rpx;
  border-radius: 44rpx;
  color:#ffffff;
  font-size:30rpx;
  margin-top: 40rpx;
}

.mask {
  position: fixed;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.75);
  z-index: 999;
}

.bags {
  width:600rpx;
  height: 640rpx;
  padding:52rpx 0;
  z-index: 10000;
  margin: 290rpx auto;
  background:#ffffff;
  border-radius: 20rpx;
  position: relative;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: center;
  box-sizing:border-box;
}

.closepos{
  position:absolute;
  width:34rpx;height:34rpx;
  top:30rpx;right:30rpx;
}

.mobile_query{
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: center;
  width:100%;
  height:100%;
}

.mobile_query>image{
  width: 140rpx;
  height: 126rpx;
}

.mobile_query>view>view{
  width: 426rpx;
  height: 90rpx;
  border-bottom:1px solid #DBDBDB;
  position: relative;
}

.mobile_query>view>view>input{
  width:100%;height:100%;color:#333333;font-size:30rpx;line-height: 90rpx;
}

.mobile_query>button{
  width: 426rpx;
  height: 76rpx;
  line-height: 76rpx;
  border-radius: 38rpx;
  background: #09A7EE;
  color: #ffffff;
  font-size: 28rpx;
}

.requestcode{
  position:absolute;
  right:0;top:0;bottom:0;
  margin:auto;
  color:#09A7EE;
  font-size:28rpx;
  line-height:90rpx;
  border:0;
  padding: 0;
  z-index: 111;
  background: transparent;
}
.requestcode::after{
  border:0;
}