/* pages/more/more.wxss */

page {
  width: 100%;
  height: 100%;
  overflow-y: auto;
  background: #F5F5F5;
}

.container {
  width: 100%;
  height: 100%;
  box-sizing: border-box;
  position: relative;
}

.container>image{
  width:100%;
  height:100%;
  position:absolute;
  top:0;bottom:0;left:0;right:0;margin:auto;
  opacity:0.1;z-index:1;
}

.raiders{
  width:100%;margin:0 auto;height:260rpx;
}

.raiders navigator{
  width:100%;height:100%;background-size:100% 100%;
}
.raiders button{
  width:100%;height:100%;
  background-size:100% 100%;
  border:0;border-radius: 0;
}
.raiders button::after{
  border:0;border-radius: 0;
}

.gamelist{
  background:#ffffff;
  display:flex;
  justify-content:center;
  padding-bottom:20rpx;position: relative;
}

.gamelist>view{
  width: 696rpx;
  display: flex;
  justify-content: flex-start;
  align-items: flex-start;
  margin:28rpx auto;
  flex-wrap:wrap;
}

.gamelist>view>view>view,.gamelist>view>view>navigator{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  margin:0 22rpx 26rpx;
}

.gamelist>view>view>view>view,.gamelist>view>view>navigator>view{
  width: 130rpx;
  height:130rpx;
  border-radius: 16rpx;
  margin-bottom: 18rpx;
  background-size:100% 100%;
  position: relative;
}

.gamelist>view>view>view>text,.gamelist>view>view>navigator>text{
  font-family:MicrosoftYaHei;color:#333333;font-size:24rpx;
  margin-top:6rpx;
}

.gamelisttitle{
  display: flex;
  justify-content: flex-start;
  align-items: center;
  background: #ffffff;
  padding:24rpx 0 34rpx 30rpx;
}

.gamelisttitle>image{
  width:42rpx;
  height: 42rpx;
}

.gamelisttitle>text{
  font-family:MicrosoftYaHei;
  color:#1A1A1A;
  font-size:32rpx;
  margin-left: 20rpx;
}

.box {
  width: 100%;
  height: auto;
  background: #ffffff;
}

.box_son {
  width: 100%;
  height: 160rpx;
  margin: 0 auto;
  padding:0 30rpx 0 48rpx;
  box-sizing:border-box;
  position:relative;
}

.box_son>view:nth-child(1),.box_son>navigator{
  width:100%;
  height:160rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.box_son>view>view,.box_son>navigator>view{
  display: flex;
  justify-content: flex-start;
  align-items: center;
}

.box_son>view>view>image,.box_son>navigator>view>image{
  width:130rpx;
  height:130rpx;
  border-radius: 20rpx;
  margin-right: 28rpx;
}

.box_son>view>view>view,.box_son>navigator>view>view{
  display: flex;
  flex-direction:column;
  justify-content:center;
  align-items:flex-start;
}

.box_son>view>view>view>text:nth-child(1),.box_son>navigator>view>view>text:nth-child(1){
  font-size: 30rpx;
  font-family: MicrosoftYaHei;
  color:#333333;
}

.box_son>view>view>view>text:nth-child(2),.box_son>navigator>view>view>text:nth-child(2){
  font-size: 24rpx;
  font-family: MicrosoftYaHei;
  color:#999999;
}

.box_son>view>button,.box_son>navigator>button{
  width: 140rpx;
  height: 60rpx;
  line-height: 60rpx;
  border-radius:30rpx;
  background: #FE4141;
  font-size: 26rpx;
  font-family: MicrosoftYaHei;
  color: #ffffff;
  padding: 0;
  margin: 0;
}

.thinline{
  width:100%;
  height:1px;
  background: #EBEBEB;
  transform: scale(1,0.5);
  position:absolute;
  bottom:0;
}

.mask {
  position: fixed;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.75);
  display: flex;
  flex-direction: column;
  z-index: 999;
}

.bags {
  width: 600rpx;
  height: 300rpx;
  z-index: 1000;
  background:#ffffff;
  border-radius: 16rpx;
  position: fixed;
  top:0;
  bottom:0;
  left: 0;right:0;
  margin: auto;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: center;
  box-sizing:border-box;
  padding:70rpx 0 20rpx;
}
.bags>text{
  color:#333333;
  font-size:26rpx;
}
.bags>button{
  color:#ffffff;
  font-size:26rpx;
  width: 300rpx;
  height:68rpx;
  border-radius: 34rpx;
  background: #FE4141;
}

.closepos{
  position:absolute;
  width:30rpx;height:30rpx;
  top:0;
  right:0;
  padding:40rpx 40rpx 200rpx 200rpx;
}